<!DOCTYPE html>
<html>
<head>
  <title>Crowdfounder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <h1><%= link_to "Crowdfounder", root_path %></h1>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Projects", projects_path %></li>
              <% if current_user %>
              <li><%= link_to "My Profile", current_user %></li>
              <% end %>
          </ul>
        </nav>
    </div>
  </header>

  <section id="login">
    <ul>
      <% if current_user %>
      You are signed in as <%= current_user.first_name %> <%= current_user.last_name %>.
      <%= link_to "Sign out", session_path("current"), method: :delete %>
      <% else %> 
      <li><%= link_to "Sign up", new_user_path %></li>
      <li><%= link_to "Sign in", new_session_path %></li>
      <% end %>
    </ul>
  </section>
  
  <section id="content">

    <% if flash[:alert] %>
      <section id="alert"><%= flash[:alert] %></section>
    <% end %>

    <% if flash[:notice] %>
      <section id="notice"><%= flash[:notice] %></section>
    <% end %>

    <%= yield %>

  </section>

</body>
</html>
